<nav class="navbar">
  <div ng-if="user">
    <h1 id="main-title" >Hi {{ user.name }}</h1>
    <button ng-click="logout()" class="btn">Logout</button>
  </div>
  <div ng-show="!user">
    <form ng-submit="loginLocal()" class="navbar-form navbar-right">

      <div class="form-group">
          <input ng-model="loginForm.name" type="text" placeholder="Name" name="name" class="form-control">
      </div>
      <div class="form-group">
          <input ng-model="loginForm.password" type="password" placeholder="Hasło" name="password" class="form-control">
      </div>
      <button type="submit" class="btn btn-success">
        <span>Zaloguj</span>
      </button>
      <input type="hidden" name="_csrf" value="<%= _csrf %>" />
    </form>
    <button ng-click="loginFacebook()" class="btn">with Facebook</button>
    <form ng-submit="signup()" class="navbar-form navbar-right">

      <div class="form-group">
        <input ng-model="signupForm.name" type="text" placeholder="Name" name="name" class="form-control">
      </div>
      <div class="form-group">
        <input ng-model="signupForm.password" type="password" placeholder="Hasło" name="password" class="form-control">
      </div>
      <div class="form-group">
        <select ng-model="signupForm.type" name="type" class="form-control">
          <option value="PM">Project Manager</option>
          <option value="Employee">Employee</option>
        </select>
      </div>
      <button type="submit" class="btn btn-success">
        <span>Zarejestruj</span>
      </button>
      <input type="hidden" name="_csrf" value="<%= _csrf %>" />
    </form>

    {{ error }}
  </div>
</nav>
